<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProfileFragment"
    android:weightSum="3"
    android:id="@+id/profile_linear_layout"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/profile_records_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_weight="0.76"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/profile_fastest_thrown_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_fastest_thrown_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fastest Thrown"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/profile_fastest_thrown_record_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 m/s"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_furthest_drop_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_furthest_drop_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longest Dropped"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/profile_furthest_drop_record_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 meters"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_most_spins_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_most_spins_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fastest Spun"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/profile_most_spins_record_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 spins"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/profile_trophies_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.22"
        android:text="Your Badges"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <HorizontalScrollView
        android:id="@+id/profile_trophies_horizontal_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/profile_trophies_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
