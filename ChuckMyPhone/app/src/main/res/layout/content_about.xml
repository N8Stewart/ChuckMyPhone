<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/about_linear_layout"
    android:weightSum="1"
    tools:context="com.ohiostate.chuckmyphone.chuckmyphone.AboutFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app was created for entertainment purposes only. No data about our users is being sold or shared with anyone else\n" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app was made to be free for you, but this app does cost money to maintain. Please consider supporting it.\n" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you donate, you receive in-app benefits:\n" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$0.01 - Bronze star by name on leaderboard" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$1.00 - Silver star by name on leaderboard" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$5.00 - Gold star by name, change username freely" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$10.00 - Rainbow shooting star by name, change username freely, can use special characters in username" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="4"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate $0.01"
            android:id="@+id/about_donate_tier_1"
            android:layout_weight="1"
            android:textSize="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate $1.00"
            android:id="@+id/about_donate_tier_2"
            android:layout_weight="1"
            android:textSize="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate $5.00"
            android:id="@+id/about_donate_tier_3"
            android:layout_weight="1"
            android:textSize="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate $10.00"
            android:id="@+id/about_donate_tier_4"
            android:layout_weight="1"
            android:textSize="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/about_credits_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Credits"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/about_terms_of_service_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:gravity="bottom"
        android:text="Terms of Service"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>

