<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/about_linear_layout"
    android:weightSum="1"
    tools:context="com.ohiostate.chuckmyphone.chuckmyphone.AboutFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="About This App\n"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feel free to check out the code behind the project at\nhttp://github.com/timtaylorosu16/ChuckMyPhone\n\n" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app was made to be free for you, but this app does cost money to maintain. Please consider supporting it.\n" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you donate, you receive in-app benefits:\n" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$0.01 Donation - Bronze star by name on leaderboard" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$1.00 Donation - Silver star by name on leaderboard" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$5.00 Donation - Gold star by name on leaderboard" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$10.00 Donation - Rainbow shooting star by name" />

    <Button
        android:id="@+id/about_credits_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Credits" />

    <TextView
        android:id="@+id/about_terms_of_service_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:gravity="bottom"
        android:text="Terms of Service"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>

